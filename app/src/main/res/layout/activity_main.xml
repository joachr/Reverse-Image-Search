<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
   >

    <TextView
        android:text="Take a photo or choose one from your gallery and get similar results back"
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/title"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        />

    <ImageButton
        android:id="@+id/ibButton"
        android:layout_width="match_parent"
        android:backgroundTint="@color/semiTransparent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add_photo" />

    <ImageView
        android:id="@+id/addedImageFromEitherCameraOrMemory"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/added_image"
        tools:src="@drawable/browndress" />

    <Button
            android:layout_marginHorizontal="4dp"
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_this_image"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:drawableLeft="@drawable/ic_baseline_search_white"/>

    <ProgressBar
        android:id="@+id/upload_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateOnly="true"
        android:indeterminateTint="#86FFFFFF"
            />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/semigray"
        android:background="@color/transparent"
        app:itemTextColor="@drawable/selector"
        android:layout_alignParentBottom="true"

        app:menu="@menu/bottom_navigation">


    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>